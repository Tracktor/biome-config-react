{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": false
    }
  },
  "files": {
    "includes": ["src/**", "!node_modules", "!dist", "!build", "!coverage", "!.venv", "!e2e", "!src/api"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 140
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useAnchorContent": "error",
        "useButtonType": "error",
        "useKeyWithClickEvents": "error",
        "useKeyWithMouseEvents": "warn",
        "useValidAnchor": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off",
        "useLiteralKeys": "error",
        "useOptionalChain": "warn",
        "useSimplifiedLogicExpression": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      },
      "correctness": {
        "noChildrenProp": "off",
        "noNestedComponentDefinitions": "warn",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "warn",
        "useUniqueElementIds": "warn"
      },
      "nursery": {
        "useSortedClasses": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "recommended": true,
      "style": {
        "noNegationElse": "error",
        "noParameterAssign": "error",
        "useBlockStatements": "warn",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": {
          "level": "warn",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useConst": "error",
        "useDefaultParameterLast": "error",
        "useExportType": "error",
        "useForOf": "error",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "useShorthandFunctionType": "error",
        "useSingleVarDeclarator": "error",
        "useTemplate": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConsole": {
          "level": "off",
          "options": {
            "allow": ["warn", "error", "info", "log"]
          }
        },
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noExplicitAny": "warn",
        "noShadowRestrictedNames": "error",
        "noTsIgnore": "warn",
        "noUnknownAtRules": "off",
        "useAwait": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "*.test.ts",
        "*.test.tsx",
        "*.test.js",
        "*.test.jsx",
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx",
        "*.stories.tsx",
        "*.cy.ts",
        "*.cy.js"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "warn"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["*.config.ts", "*.config.js", "vite.config.ts", "next.config.js", "next.config.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNodejsImportProtocol": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["next-env.d.ts", "react-app-env.d.ts", "vite-env.d.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["e2e/**"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
